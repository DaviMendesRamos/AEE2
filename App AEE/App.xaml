<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:App_AEE"
             xmlns:converters="clr-namespace:App_AEE.Converters"
             x:Class="App_AEE.App">
    <Application.Resources>
        <ResourceDictionary>
            
            <!-- Dicionários de Recursos Existentes -->
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <!-- Estilo Personalizado para Navegação -->
            <Style TargetType="NavigationPage">
                <Setter Property="BarBackgroundColor" Value="#1c1c1c" />
                <!-- Fundo escuro -->
                <Setter Property="BarTextColor" Value="White" />
                <!-- Texto branco -->
            </Style>

           
            <converters:EquipeToColorConverter x:Key="EquipeToColorConverter" />

            <!-- Estilo Global para Entry (opcional) -->
           

        </ResourceDictionary>
    </Application.Resources>
</Application>
