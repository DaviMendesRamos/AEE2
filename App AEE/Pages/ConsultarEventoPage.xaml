<?xml version="1.0" encoding="utf-8" ?>
<Shell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:local="clr-namespace:App_AEE.Pages"
       x:Class="App_AEE.Pages.ConsultarEventoPage"
       Title="Detalhes do Evento">

    <!-- Definindo as abas -->
    <TabBar>
        <Tab Title="Evento">
            <ContentPage>
                <StackLayout Padding="10">
                    <Label Text="{Binding EventoSelecionado.NomeEvento}" FontSize="24" HorizontalOptions="Center" />
                    <Label Text="{Binding EventoSelecionado.Descricao}" FontSize="16" HorizontalOptions="StartAndExpand" Margin="0,10" />
                    <Label Text="{Binding EventoSelecionado.DataEvento}" FontSize="16" HorizontalOptions="StartAndExpand" Margin="0,10" />
                    <Label Text="{Binding EventoSelecionado.LocalEvento}" FontSize="16" HorizontalOptions="StartAndExpand" Margin="0,10" />
                    <Button Text="Editar Evento" IsVisible="{Binding IsAdmin}" Clicked="EditarEvento_Clicked" Margin="0,10" />
                </StackLayout>
            </ContentPage>
        </Tab>

        <Tab Title="Equipes">
            <ContentPage>
                <CollectionView ItemsSource="{Binding EventoSelecionado.Equipes}">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <StackLayout Padding="10">
                                <Label Text="{Binding NomeEquipe}" FontSize="18" />
                            </StackLayout>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </ContentPage>
        </Tab>
    </TabBar>
</Shell>
