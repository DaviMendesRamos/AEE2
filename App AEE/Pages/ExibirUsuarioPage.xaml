<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App_AEE.Pages.ExibirUsuarioPage"
             Title="ExibirUsuarioPage"
             Shell.NavBarIsVisible="False">
    <VerticalStackLayout Padding="20">
        <Label Text="Seu Perfil"
               FontSize="Large"
               HorizontalTextAlignment="Center"
               FontAttributes="Bold"
               FontAutoScalingEnabled="True"
               FontFamily="arial"/>

        <!-- Exibição dos dados do usuário -->
        <Label x:Name="lblNome" FontSize="Medium" />
        <Label x:Name="lblEmail" FontSize="Medium" />
        <Label x:Name="lblTelefone" FontSize="Medium" />

        <!-- Botão para editar dados -->
        <Button Text="Editar Dados" Clicked="OnEditarClicked"/>

        <!-- Botão para deslogar -->
        <Button Text="Deslogar" x:Name="btndeslogar" Clicked="btndeslogar_Clicked" />
    </VerticalStackLayout>
</ContentPage>