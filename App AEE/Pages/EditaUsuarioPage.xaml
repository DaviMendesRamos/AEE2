<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="App_AEE.Pages.EditaUsuarioPage"
             Title="EditaUsuarioPage"
             NavigationPage.HasNavigationBar="False">
    
    <ScrollView>
        <Grid  toolkit:DockLayout.DockPosition="Bottom"  HeightRequest="50"  BackgroundColor="DarkGreen">
            <Label Text="IFRJ Â© " HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand" TextColor="White"></Label>
        </Grid>
        
    <StackLayout 
        VerticalOptions='CenterAndExpand'
        Margin="16"
        Padding="16"
        >

        <Label 
            Text="Email"
        />

        <Entry
            Placeholder="Digite seu email" 
            x:Name="Email" 
            Text="{Binding Email}"
        />

        <Label 
            Text="Senha"
        />

        <Entry
            Placeholder="Digite sua senha" 
            x:Name="Senha" 
            Text="{Binding Senha}"
        />

        <Button Text="Cadastrar" 
                x:Name="btnCadastrar" 
                Clicked="btnCadastrar_Clicked"
                Margin="10"
                 BackgroundColor="Black" TextColor="White"
                />
        

        <Button Text="Voltar"
                x:Name="btnVoltar"
                Clicked="btnVoltar_Clicked"
                Margin="10"
                 BackgroundColor="Black" TextColor="White"
                />
    </StackLayout>

    </ScrollView>
</ContentPage>