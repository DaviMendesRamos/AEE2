<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App_AEE.Pages.CriarEquipePage"
             Title="CriarEquipePage">
    <VerticalStackLayout>
        
        
        <Entry x:Name="txtNomeEquipe" Placeholder="Nome da Equipe" />
        <Entry x:Name="txtModalidade" Placeholder="Modalidade" />

        <Button Text="Criar Equipe"
                BackgroundColor="#2f2f2f"
                TextColor="White"
                FontAttributes="Bold"
                Clicked="btnCriarEquipe_Clicked" />

    </VerticalStackLayout>
</ContentPage>